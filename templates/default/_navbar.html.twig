{% block style %}
<link rel="stylesheet" href="{{ asset('style/navbar.css') }}" />
{% endblock %}
<nav>
  <ul>
    <div class="navbar navbar-left">
      <a href="../">
        <img src="{{ asset('uploads/img/logo.png') }}" alt="test" width="150"
      /></a>
      <li><a href="../box">Boxs soin visage</a></li>
      <li class="dropdown">
        <a href="{{ path('app_product') }}" class="drophover"
          >Ingrédients et ustensiles</a
        >
      </li>
      <li><a href="#">Notre blog</a></li>
      <li><a href="#">Les mieux notés</a></li>
    </div>
    <div class="navbar navbar-right">
      <li>
        <a href="#" id="signInLink"
          ><i class="fa fa-solid fa-user icon"></i>Connexion / Inscription</a
        >
      </li>
      <li>
        <a href="#" id="cartLink"
          ><i class="fa fa-light fa-cart-shopping icon"></i>Panier</a
        >
      </li>
    </div>
  </ul>
</nav>

<div id="cartModal" class="hidden">
  {{ include("default/_cart.html.twig") }}
</div>
<div id="signInModal" class="hidden">
  {{ include("default/_signIn.html.twig") }}
</div>

{% block script %}
<script>
  document
    .getElementById("cartLink")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("cartModal").classList.toggle("show");
    });
  document
    .getElementById("signInLink")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("signInModal").classList.toggle("show");
    });
  document
    .getElementById("closeSignIn")
    .addEventListener("click", function (event) {
      event.preventDefault();
      document.getElementById("signInModal").classList.remove("show");
    });
</script>
{% endblock %}
