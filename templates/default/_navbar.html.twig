{% block style %}
<link rel="stylesheet" href="{{ asset('style/navbar.css') }}" />
{% endblock %}
<nav>
  <ul>
    <div class="navbar navbar-left">
      <a href="../">
        <img src="{{ asset('uploads/img/logo.svg') }}" alt="test" width="200"
      /></a>
      <li><a href="../box">Boxs soin visage</a></li>
      <li class="dropdown">
        <a href="{{ path('app_product') }}" class="drophover"
          >Ingrédients et ustensiles<i class="fa fa-thin fa-caret-down icon"></i
        ></a>

        <div class="dropdown-content">
          <a href="#">Link 1</a>
          <a href="#">Link 2</a>
